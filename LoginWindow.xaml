<Window x:Class="OrangeVote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrangeVote"
        mc:Ignorable="d"
        Title="OMS-小椪柑志工服務隊" Height="300" Width="300">
    <Grid>
        <Border Background="AliceBlue"></Border>
        <StackPanel VerticalAlignment="Center" Margin="50,0">
            <Label x:Name="LbLogo" HorizontalAlignment="Center" FontSize="20">OMS</Label>
            <TextBox x:Name="TbUsername" VerticalAlignment="Center" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PbPassword" Margin="0,0,0,5"></PasswordBox>
            <Button x:Name="BnTemp" Width="40px" Height="20px">登入</Button>
        </StackPanel>
    </Grid>
</Window>
